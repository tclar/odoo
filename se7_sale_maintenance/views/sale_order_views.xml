<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="se7_sale_maintenance_sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="se7_gestion_instaladoras.se7_gestion_instaladoras_inherit_view_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="fecha_programada" position="before">
                    <field name="es_instalacion" invisible="1"/>
                    <field name="tipo_trabajo" widget="radio" attrs="{'invisible': [('es_instalacion', '=', True)]}"/>
                </field>
            </field>
        </record>

        <record id="se7_sale_maintenance_view_sale_order_calendar_inherit" model="ir.ui.view">
            <field name="name">sale.order.calendar</field>
            <field name="model">sale.order</field>
            <field name="inherit_id"
                   ref="se7_gestion_instaladoras.se7_gestion_instaladoras_inherit_view_sale_order_calendar"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//calendar" position="attributes">
                    <attribute name="color">estado_trabajo</attribute>
                </xpath>
                <field name="conductor" position="before">
                    <field name="tipo_trabajo"/>
                </field>
            </field>
        </record>

    </data>
</odoo>