<?xml version="1.0"?>
<odoo>

    <record id="act_res_partner_2_new_sale_order" model="ir.actions.act_window">
        <field name="name">Maintenance/Repairs</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="context">
            {'search_default_partner_id': active_id, 'default_parte_de_trabajo': True,
             'default_tipo_trabajo': 'repair', 'default_es_instalacion': False}
        </field>
        <field name="domain">[('es_instalacion', '=', False)]</field>
    </record>

    <record id="se7_maintenance_res_partner_view_buttons" model="ir.ui.view">
        <field name="name">res.partner.view.buttons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button class="oe_stat_button" type="action" name="%(se7_sale_maintenance.act_res_partner_2_new_sale_order)d"
                        attrs="{'invisible': ['|', ('customer', '=', False), ('new_sale_order_count', '&lt;', 1)]}"
                        icon="fa-hammer">
                    <field string="Rep./Maint." name="new_sale_order_count" widget="statinfo"/>
                </button>
            </button>
            <xpath expr="//field[@name='sale_order_count']/.." position="replace">
                <button class="oe_stat_button" type="action" name="%(sale.act_res_partner_2_sale_order)d"
                        groups="sales_team.group_sale_salesman"
                        attrs="{'invisible': ['|', ('customer', '=', False), ('sale_order_count', '&lt;', 1)]}"
                        icon="fa-usd">
                    <field string="Sales" name="sale_order_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

    <record id="sale.act_res_partner_2_sale_order" model="ir.actions.act_window">
        <field name="domain">[('es_instalacion', '=', True)]</field>
    </record>

</odoo>
