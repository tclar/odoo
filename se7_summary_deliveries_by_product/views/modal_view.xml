<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="summary_deliveries_by_product_modal_form_view" model="ir.ui.view">
            <field name="name">summary_deliveries_by_product.modal.form</field>
            <field name="model">summary_deliveries_by_product.modal</field>
            <field name="arch" type="xml">
                <form string="Summary of deliveries by product">
                    <group>
                        <field name="id" invisible="1"/>
                        <field name="day" widget="date"/>
                        <field name="product_movments" widget="one2many_list"/>
                    </group>
                    <footer>
                        <button name="%(report_summary_deliveries_by_product)d" type="action"
                                class="btn-primary" icon="fa-print" string="Print"/>
                        <button special="cancel" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_tree_product_movment" model="ir.ui.view">
            <field name="name">Product Movment List</field>
            <field name="model">summary_deliveries_by_product.product_movment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_name"/>
                    <field name="product_qty"/>
                </tree>
            </field>
        </record>


        <record id="summary_deliveries_by_product_modal_act_window" model="ir.actions.act_window">
            <field name="name">Summary of deliveries by product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">summary_deliveries_by_product.modal</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem name="Summary of deliveries by product" id="summary_deliveries_by_product_modal_menu" sequence="200"
                  parent="stock.menu_warehouse_report" action="summary_deliveries_by_product_modal_act_window"/>

    </data>
</odoo>