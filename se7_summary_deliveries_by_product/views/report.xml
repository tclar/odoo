<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <report id="report_summary_deliveries_by_product"
                model="summary_deliveries_by_product.modal"
                string="Summary of deliveries by product"
                name="se7_summary_deliveries_by_product.report_summary_deliveries_by_product_view"
                file="se7_summary_deliveries_by_product.report_summary_deliveries_by_product_view"
                report_type="qweb-pdf"/>

        <template id="report_summary_deliveries_by_product_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h1>Summary of deliveries by product <span t-field="o.day"/></h1>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.product_movments" t-as="movment">
                                        <tr>
                                            <td><span t-field="movment.product_name"/></td>
                                            <td><span t-field="movment.product_qty"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>